<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 设置界面添加属性用来区别显示哪种控件 -->
    <declare-styleable name="settingViewDefineAttr">
        <!-- 改变线程池大小 -->
        <attr name="isThreadPool" format="boolean"/>
        <!-- 自动检查更新 -->
        <attr name="isAutoCheckUpdate" format="boolean"/>
        <!-- 检查更新 -->
        <attr name="isCheckUpdate" format="boolean"/>
        <!-- 正常布局，右边为箭头图标 -->
        <attr name="isNext" format="boolean"/>
    </declare-styleable>
    
    <declare-styleable name="CustomRatingBar">
        <attr name="editAble" format="boolean" />
        <attr name="showScore" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="RatingBarAttr">
        <attr name="rating" format="float" />
    </declare-styleable>
    
    <declare-styleable name="ShareAttr">
        <attr name="imgBg" format="reference"/>
        <attr name="titleText" format="reference"/>
        <attr name="shareBg" format="reference"/>
    </declare-styleable>
    
    <attr name="fontPath" format="string"/>
    
    <declare-styleable name="AnimDownloadProgressButton">
        <attr name="progressbtn_radius" format="float" />
        <attr name="progressbtn_backgroud_color" format="color" />
        <attr name="progressbtn_backgroud_second_color" format="color" />
        <attr name="progressbtn_text_color" format="color" />
        <attr name="progressbtn_text_covercolor" format="color" />
    </declare-styleable>
    
    <declare-styleable name="WaitingDots">
        <attr name="dotsColor" format="color" />
        <attr name="period" format="integer" />
        <attr name="jumpHeight" format="integer" />
        <attr name="autoplay" format="boolean" />
    </declare-styleable>
    
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
</resources>
