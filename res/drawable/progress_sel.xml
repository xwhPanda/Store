<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!--
    <item android:id="@android:id/progress" android:drawable="@color/progressColor"/>
    <item android:id="@android:id/background" android:drawable="@color/progressBgColor"/>    -->

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:endColor="@color/progressBgColor"
                android:startColor="@color/progressBgColor" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:endColor="@color/progressColor"
                    android:startColor="@color/progressColor" />
            </shape>
        </clip>
    </item>

</layer-list>