<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:ignore="MissingPrefix" >

    <TextView
        android:id="@+id/headlinesTx"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        fontPath="fonts/lantinghei.ttf"
        android:background="@color/headlineColor"
        android:gravity="center"
        android:text="@string/headlineTx"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
    	android:id="@+id/headlineContenLin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:clickable="true"
        android:background="@color/headlineContentBg" >

        <ImageView
            android:id="@+id/headlineContenImg"
            android:layout_width="@dimen/headlineContenImgSize"
            android:layout_height="@dimen/headlineContenImgSize"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/bao" />

        <TextView
            android:id="@+id/headlinesInformation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/headlineContenImg"
            fontPath="fonts/lantinghei.ttf"
            android:background="@color/headlineContentBg"
            android:ellipsize="end"
            android:maxEms="20"
            android:singleLine="true"
            android:text="使命召唤最新公测，最炫风暴等你来开启"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>