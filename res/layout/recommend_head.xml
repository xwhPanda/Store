<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bottomBgColor">

    <RelativeLayout
        android:id="@+id/recommendImgRel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommendViewPagerHeight" >

        <android.support.v4.view.ViewPager
            android:id="@+id/recommendImgViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:id="@+id/imgList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal" >
        </LinearLayout>
    </RelativeLayout>

    <include
        android:id="@+id/recommendCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendImgRel"
        layout="@layout/recommend_category" />

    <include
        android:id="@+id/headlinesLin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/headlinesHeight"
        android:layout_below="@id/recommendCategory"
        layout="@layout/headlines" />

    <HorizontalScrollView 
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headlinesLin"
        android:scrollbars="none"
        android:layout_marginTop="@dimen/recommendGameListMarginTop">
        
	    <LinearLayout
	        android:id="@+id/recommendGameList"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_gravity="center_horizontal"
	        android:background="@color/bottomBgColor">
	    </LinearLayout>
    </HorizontalScrollView>
    
    <ImageView 
        android:id="@+id/recommendGameInformationImg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recommendGameInformationImgHeight"
        android:layout_marginTop="@dimen/recommendGameInformationImgMarginTop"
        android:layout_below="@id/scrollView"
        android:background="@color/red"/>
    
    <TextView 
        android:id="@+id/emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recommendGameInformationImg"/>

</RelativeLayout>