<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/kuaisudenglu">
    
	<RelativeLayout 
	    android:id="@+id/titleRel"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    
	    <ImageView 
	        android:id="@+id/leftLine"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:background="@drawable/xian"/>
	    
	    <ImageView 
	        android:id="@+id/rightLine"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:background="@drawable/xian"/>
	    
	    <TextView 
	        android:id="@+id/title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true"
	        android:textColor="@color/itemDesColor"
	        android:text="@string/quickLogin"/>
	    
	</RelativeLayout>
    
	<RelativeLayout 
	    android:id="@+id/iconRel"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true">
	    
	    <Button 
	        android:id="@+id/qqLogin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/qq"/>
	    
	    <Button 
	        android:id="@+id/weixinLogin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/qqLogin"
	        android:layout_alignTop="@id/qqLogin"
	        android:layout_alignBottom="@id/qqLogin"
	        android:background="@drawable/weixin"/>
	    
	    <Button 
	        android:id="@+id/sinaLogin"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/weixinLogin"
	        android:layout_alignTop="@id/weixinLogin"
	        android:layout_alignBottom="@id/weixinLogin"
	        android:background="@drawable/weibo"/>
	</RelativeLayout>
	
</RelativeLayout>
