<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/gameIcon"
            android:layout_width="@dimen/informationListViewIconW"
            android:layout_height="@dimen/informationListViewIconH"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/informationListViewMargin"
            android:background="@color/red" />

        <RelativeLayout
            android:id="@+id/timeRel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/gameIcon"
            android:layout_alignParentRight="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/zhuanti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="fonts/lantinghei.ttf"
                    android:text="@string/zhuanti"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="@dimen/informationTimeImgW"
                    android:layout_height="@dimen/informationTimeImgH"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/more" />
            </LinearLayout>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fontPath="fonts/lantinghei.ttf"
                android:maxLength="10"
                android:singleLine="true"
                android:textColor="@color/informationListTimeColor"
                android:textSize="12sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/informationRel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/gameIcon"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/timeRel"
            android:layout_toRightOf="@id/gameIcon" >

            <TextView
                android:id="@+id/gameName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                fontPath="fonts/lantinghei.ttf"
                android:ellipsize="end"
                android:maxLength="17"
                android:singleLine="true"
                android:textColor="@color/informationListGameColor" />

            <TextView
                android:id="@+id/gameDes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/gameName"
                android:layout_below="@id/gameName"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="@dimen/informationListViewTimeMarginB"
                fontPath="fonts/lantinghei.ttf"
                android:ellipsize="end"
                android:maxLines="3"
                android:textColor="@color/itemDesColor" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>