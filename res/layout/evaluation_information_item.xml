<?xml version="1.0" encoding="utf-8"?>
<!-- 游戏测评详情页中下面部分的详细测评 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix" >

    <TextView
        android:id="@+id/evaluationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        fontPath="fonts/lantinghei.ttf"
        android:text="画面表现：发卡机构和客户共轭忘记渐渐发觉乐基儿"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/evaluationInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/evaluationTitle"
        fontPath="fonts/lantinghei.ttf"
        android:text="事发后我认为哦陪我让肌肤姐啊放假啊警方打卡机骄傲阿飞啊短发发他微软  阿飞阿发发疯啊一日游公司股票我认为破期望我而破哦啊发放沃尔沃啊发哦破我让我肉皮破官方多岁发阿飞企鹅阿飞刚刚儿童发给我斯蒂芬"
        android:textColor="@color/itemDesColor" />

    <ImageView
        android:id="@+id/evaluationImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/evaluationInfo"
        android:layout_centerHorizontal="true"
        android:background="@color/red" />

</RelativeLayout>