<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    tools:ignore="MissingPrefix" >
    
    <ImageView 
        android:id="@+id/thematicImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/red"/>
    
    <LinearLayout 
        android:id="@+id/titleLin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/thematicImg"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        
        <ImageView 
            android:id="@+id/titleImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/hot_icon"/>
        
        <TextView 
            android:id="@+id/thematicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            fontPath="fonts/lantinghei.ttf"
            android:layout_gravity="center_vertical"
            android:singleLine="true"
            android:text="感觉噶空间"/>
        
        <TextView 
            android:id="@+id/leftBrackets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            android:text="@string/leftBrackets"
            fontPath="fonts/lantinghei.ttf"
            android:layout_gravity="center_vertical"/>
        
        <TextView 
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            fontPath="fonts/lantinghei.ttf"
            android:layout_gravity="center_vertical"
            android:text="46462人"/>
        
        <ImageView
            android:id="@+id/heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/xihuan"/>
        
        <TextView 
            android:id="@+id/rightBrackets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
          	android:layout_gravity="center_vertical"
          	android:text="@string/rightBrackets"
            fontPath="fonts/lantinghei.ttf"/>
    </LinearLayout>

</RelativeLayout>
