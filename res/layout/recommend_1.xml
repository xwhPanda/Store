<com.jiqu.view.PullToRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@color/bottomBgColor">

    <include layout="@layout/refresh_head" />

    <com.jiqu.view.PullableListView
        android:id="@+id/recommendListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bottomBgColor"
        android:dividerHeight="1dp" 
        android:divider="@drawable/divider"
        android:listSelector="@null"
        android:scrollbars="none"/>

    <include layout="@layout/load_more" />

</com.jiqu.view.PullToRefreshLayout>
