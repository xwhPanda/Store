<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix" >

    <com.jiqu.view.TitleView
        android:id="@+id/titleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.jiqu.view.PasswordView
        android:id="@+id/passwordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" />

    <com.jiqu.view.PasswordView
        android:id="@+id/confirmPasswordView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/passwordView"
        android:layout_alignRight="@id/passwordView"
        android:layout_below="@id/passwordView"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/confirmPasswordView"
        android:layout_alignRight="@id/confirmPasswordView"
        android:layout_below="@id/confirmPasswordView"
        android:layout_centerHorizontal="true"
        fontPath="fonts/lantinghei.ttf"
        android:background="@drawable/denglu"
        android:text="@string/commit"
        android:textColor="@color/white" />

</RelativeLayout>